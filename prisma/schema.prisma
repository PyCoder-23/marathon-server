// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  username      String     @unique
  passwordHash  String
  discordHandle String?    @unique
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  auditLogs     AuditLog[]

  // Squad Relation
  squadId String?
  squad   Squad?  @relation(fields: [squadId], references: [id])

  // Stats
  totalXp      Int @default(0)
  totalMinutes Int @default(0)
  streakDays   Int @default(0)

  // Role & Status
  isAdmin     Boolean   @default(false)
  bannedUntil DateTime?
  image       String?

  isProfileLocked         Boolean   @default(false)
  lastMissionCheck        DateTime  @default(now())

  // Verification & Reset
  isVerified              Boolean   @default(false)
  verificationCode        String?
  verificationCodeExpires DateTime?
  pendingEmail            String?
  resetCode               String?
  resetCodeExpires        DateTime?

  // Coins & Shop
  coins            Int @default(0)
  streakFreezes    Int @default(0)
  missionPardons   Int @default(0)

  // Equipped Cosmetics
  equippedFrame       String? // Asset URL or Item ID
  equippedNameplate   String?
  equippedBanner      String?
  equippedBadge       String?

  // Relations
  sessions            Session[]
  xpTransactions      XPTransaction[]
  missionProgress     MissionProgress[]
  monthlyWins         UserMonthlyWinner[]
  weeklyWins          UserWeeklyWinner[]
  events              Event[]
  tasks               Task[]
  coinTransactions    CoinTransaction[]
  inventory           UserItem[]
  journalEntries      JournalEntry[]
}

model ShopItem {
  id          String     @id @default(cuid())
  name        String
  description String
  type        String // "FRAME" | "NAMEPLATE" | "BANNER" | "BADGE" | "FREEZE"
  price       Int
  assetUrl    String?
  cssClass    String? // For CSS-only effects
  isAnimated  Boolean    @default(false)
  createdAt   DateTime   @default(now())
  userItems   UserItem[]
}

model UserItem {
  id        String   @id @default(cuid())
  userId    String
  itemId    String
  purchasedAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
  item      ShopItem @relation(fields: [itemId], references: [id])

  @@unique([userId, itemId])
}

model CoinTransaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Int      // positive for earn, negative for spend
  type        String   // "streak" | "competition" | "shop_purchase" | "admin"
  description String
  metadata    String?  // JSON string for extra data
  createdAt   DateTime @default(now())

  @@index([userId])
}

model Squad {
  id             String          @id @default(cuid())
  name           String          @unique
  description    String          @default("")
  slogan         String?
  bannerUrl      String?
  createdAt      DateTime        @default(now())
  members        User[]
  monthlyWinners MonthlyWinner[]
  weeklyWinners  WeeklyWinner[]
}

model Session {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  startTs     DateTime
  endTs       DateTime
  durationMin Int
  completed   Boolean  @default(true)
  source      String // "web" | "bot" | "manual"
  subjectTag  String?
  needsReview Boolean  @default(false) // Anti-cheat flag
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([completed])
  @@index([userId, completed])
  @@index([startTs])
  @@index([userId, startTs])
}

model Mission {
  id          String            @id @default(cuid())
  title       String
  description String
  criteria    String
  type        String // "DAILY" | "WEEKLY" | "LONG_TERM"
  difficulty  String // "EASY" | "MEDIUM" | "HARD"
  xpReward    Int
  active      Boolean           @default(true)
  createdAt   DateTime          @default(now())
  progresses  MissionProgress[]

  @@unique([title, criteria])
}

model MissionProgress {
  id          String    @id @default(cuid())
  userId      String
  missionId   String
  startedAt   DateTime  @default(now())
  completed   Boolean   @default(false)
  completedAt DateTime?
  progress    Int       @default(0)
  user        User      @relation(fields: [userId], references: [id])
  mission     Mission   @relation(fields: [missionId], references: [id])

  @@unique([userId, missionId])
  @@index([userId])
  @@index([completed])
  @@index([userId, completed])
}

model XPTransaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Int // positive for earn, negative for admin adjustments
  source      String // "session" | "mission" | "admin" | "bonus"
  referenceId String? // optional id linking to Session or MissionProgress
  createdAt   DateTime @default(now())
  note        String?

  @@index([userId, createdAt])
  @@index([createdAt])
  @@index([userId])
}

model MonthlyWinner {
  id        String   @id @default(cuid())
  month     String // "YYYY-MM"
  squadId   String
  squad     Squad    @relation(fields: [squadId], references: [id])
  totalXp   Int
  createdAt DateTime @default(now())

  @@unique([month, squadId])
}

model WeeklyWinner {
  id        String   @id @default(cuid())
  week      String // "YYYY-WW" (year and week number)
  squadId   String
  squad     Squad    @relation(fields: [squadId], references: [id])
  totalXp   Int
  createdAt DateTime @default(now())

  @@unique([week, squadId])
}

model UserMonthlyWinner {
  id        String   @id @default(cuid())
  month     String // "YYYY-MM"
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  totalXp   Int
  createdAt DateTime @default(now())

  @@unique([month, userId])
}

model UserWeeklyWinner {
  id        String   @id @default(cuid())
  week      String // "YYYY-WW" (year and week number)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  totalXp   Int
  createdAt DateTime @default(now())

  @@unique([week, userId])
}

model AuditLog {
  id        String   @id @default(cuid())
  adminId   String
  adminName String
  action    String
  details   String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Event {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  title       String
  description String?
  start       DateTime
  end         DateTime
  allDay      Boolean  @default(false)
  color       String?  // hex code or preset name
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([start])
}

model Task {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  completed Boolean  @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model JournalEntry {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  type             String   // "HABIT" | "GRATITUDE" | "HEALTH"
  date             String   // "YYYY-MM-DD"
  
  // Habit fields
  habitName        String?
  habitCompleted   Boolean? @default(false)
  habitNotes       String?
  
  // Gratitude fields
  gratitudeTitle   String?
  gratitudeContent String?
  gratitudeMood    String?
  
  // Health fields
  healthCategory   String?  // "mental" | "physical" | "food"
  healthTitle      String?
  healthContent    String?
  healthRating     Int?     @default(0)
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId, date])
  @@index([type])
}
